<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:mem:transfers_test;DB_CLOSE_DELAY=-1</property>
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="minimum-connection-count">10</property>
        <property name="maximum-connection-count">50</property>

        <mapping class="com.blecua84.moneytransfers.services.models.Account"/>
        <mapping class="com.blecua84.moneytransfers.services.models.Transfer"/>
    </session-factory>
</hibernate-configuration>
